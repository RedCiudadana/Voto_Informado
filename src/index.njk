---
permalink: "index.html"
---

{% extends "src/base.njk" %}

{% block head %}
<title>Voto Informado | Red Ciudadana</title>

{% endblock %}

{% block content %}

		<!-- Content
		============================================= -->
		<section id="content px-4">
			<div class="content-wrap">

				<!-- Novedades
				============================================= -->

				<div class="section mt-1 mb-4" style="background-color: #fff">
					<div class="container">
						<div class="row">

							<div class="col-lg-3 col-sm-12 order-2 order-lg-1">
								{% for novedad in collections.novhigh2 | limitPart(1,2) %}
								<div class="novedad_secundaria_lateral mb-4">
									<img src="{{novedad.data.image}}">
									<a href="{{novedad.url}}"><h1>{{novedad.data.title}}</h1></a>
									<p>{{novedad.data.description}}</p>
									<i>Escrito por: &nbsp{{novedad.data.autor}}</i>
								</div>
								{% endfor%}
								{% for novedad in collections.novhigh3 | limitPart(0,2) %}
								<div class="novedad_terciaria_lateral mb-4">
									<a href="{{novedad.url}}"><h1>{{novedad.data.title}}</h1></a>
									<p>{{novedad.data.description}}</p>
									<i>Escrito por: &nbsp{{novedad.data.autor}}</i>
								</div>
								{% endfor%}
								
							</div>
							<div class="col-lg-6 col-sm-12 order-1 order-lg-2">
								{% for novedad in collections.novhigh1 | limit(1)%}
								<div class="novedad_principal mb-4">
									<img src="{{novedad.data.image}}">
									<h4>Destacado</h4>
									<a href="{{novedad.url}}"><h1>{{novedad.data.title}}</h1></a>
									<p>{{novedad.data.description}}</p>
									<i>Escrito por: &nbsp{{novedad.data.autor}}</i>
								</div>
								{% endfor%}
								{% for novedad in collections.novhigh2 | limit(1)%}
								<div class="row novedad_secundaria_centro mb-4">
									<div class="col-lg-8 col-sm-12 order-2 order-lg-1 izquierda">
										<a href="{{novedad.url}}"><h1>{{novedad.data.title}}</h1></a>
										<p>{{novedad.data.description}}</p>
										<i>Escrito por: &nbsp{{novedad.data.autor}}</i>
									</div>
									<div class="col-lg-4 col-sm-12 order-1 order-lg-2">
										<img src="{{novedad.data.image}}">
									</div>
								</div>
								{% endfor %}
							</div>
							<div class="col-lg-3 col-sm-12 order-3 order-lg-3">
								{% for novedad in collections.novhigh2 | limitPart(2,3) %}
								<div class="novedad_secundaria_lateral mb-4">
									<img src="{{novedad.data.image}}">
									<a href="{{novedad.url}}"><h1>{{novedad.data.title}}</h1></a>
									<p>{{novedad.data.description}}</p>
									<i>Escrito por: &nbsp{{novedad.data.autor}}</i>
								</div>
								{% endfor%}
								{% for novedad in collections.novhigh3 | limitPart(2,4) %}
								<div class="novedad_terciaria_lateral mt-4 mb-4">
									<a href="{{novedad.url}}"><h1>{{novedad.data.title}}</h1></a>
									<p>{{novedad.data.description}}</p>
									<i>Escrito por: &nbsp{{novedad.data.autor}}</i>
								</div>
								{% endfor%}

							</div>
							
						</div>
					</div>
				</div>
		
				<!-- Podcast
				============================================= -->

				<div class="section py-6 my-6" style="background-color: #1f4f88">
					{% if collections.podcastsHighlighted %}
					{% for podcast in collections.podcastsHighlighted | reverse | limit(1)%}
					<div class="container">
						<div class="row align-items-center col-mb-50">
					
							<div class="col-md-12 text-white">
								<div class="row posts-md col-mb-30" style="align-items:center">
									
									<div class="entry col-sm-6 col-xl-6">
										<div class="grid-inner">
											<span class="subtitulo-podcast">Podcast</span>
											<h3 class="titulo-podcast">{{podcast.data.title}}</h3>
											<p class="texto-podcast">{{podcast.data.description}}</p>
											
										</div>
									</div>

									<div class="entry col-sm-6 col-xl-6">
										<div class="grid-inner">
											<iframe src="{{podcast.data.link}}" width="100%"
                							height="232" frameBorder="0" allowfullscreen=""
               								 allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
										</div>
									</div>

								</div>
							</div>
						</div>
					</div>
					{% endfor %}
					{% endif %}
				</div>


				<!-- Eventos y Videos
				============================================= -->

				<div class="container my-4">
					<div class="row text-center mb-5" style="justify-content:space-between;align-items:flex-start">
						<!--div class="col-lg-6">
							<h3 class="display-4 fw-bolder mb-3">Publicaciones</h3>
							<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eligendi rem, facilis nobis voluptatum est voluptatem accusamus molestiae eaque perspiciatis mollitia.</p>
						</div-->

						<div class="row posts-md col-mb-30 col-xl-9">
								

							<h2 class="font-bold text-4xl border-b-2 border-blue-500 mb-4 pb-4" style="text-align:left;margin:1rem 0">Eventos</h2>

							{% for evento in collections.eventos | reverse | limit(5) %}
					
				
							<a href="{{evento.url}}" class="flex border-b-2 pb-4 mb-4 text-current responsive">
							<img src="{{ evento.data.image }}" alt="Evento" class="w-36">
							<div class="pl-8 my-auto" style="text-align:left">
								<h5 class="font-bold text-lg">
								{{evento.data.title }}
								</h5>
								<span class="text-sm">
								{{evento.data.date | dateFormat('DD/MM/YYYY')}}
								</span><br>
								<span class="text-sm">
								{{evento.data.description}}
								</span>
							</div>
							</a>

							{% endfor %}

							<div class="mb-6" style="display:flex; justify-content:flex-end">
								<a href="/eventos/index.html">Más Eventos<i class="icon-arrow-right" style="margin-left:5px"></i></a>
							</div>		
				
						</div>

						<div class="row posts-md col-mb-30 col-xl-3">
							<h3 class="uppercase font-bold text-base tracking-wider my-auto mb-4 pb-4"style="text-align:left;margin:1rem 0">Videos</h3>

							{% for video in collections.videos | reverse | limit(4)%}
							<div class="entry ">
								<div class="grid-inner">
									<iframe width="560" height="315" src="{{video.data.link}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
									<p class="txt-video">{{video.data.description}}</p>
								</div>
								
							</div>
							{% endfor %}

							<div class="mb-6">
								<div style="display:flex; justify-content:flex-end">
								<a href="/videos/index.html">Más Videos<i class="icon-arrow-right" style="margin-left:5px"></i></a>
							</div>	
						</div>	
						

					</div>	
				</div>
			</div>

			<!-- TikToks
			============================================= -->
			
			<div class="container my-4">
				<div class="row mb-5">
					<h2 class="font-bold text-4xl border-b-2 border-blue-500 mb-4 pb-4" style="text-align:left;margin:1rem 0">Tik Toks</h2>
					{% for tiktok in collections.tiktoksHighlighted | limit(3)%}
					<div class="col-lg-4 col-sm-12 col-md-6 p-0">
						{{tiktok.data.enlace | safe}}
					</div>
					{% endfor %}
				</div>
			</div>

			<!-- Novedades y Podcasts
			============================================= -->
				
			
			<div class="container my-4 mb-6">
				<div class="row text-center mb-5"  style="justify-content:space-evenly;align-items:flex-start">
					<!--div class="col-lg-6">
						<h3 class="display-4 fw-bolder mb-3">Publicaciones</h3>
						<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eligendi rem, facilis nobis voluptatum est voluptatem accusamus molestiae eaque perspiciatis mollitia.</p>
					</div-->

					<div class="row posts-md col-mb-30">

						<h2 class="font-bold text-4xl border-b-2 border-blue-500 mb-4 pb-4" style="text-align:left;margin:1rem 0">Lo último</h2>
						<div class="row d-flex">
							{% for novedad in collections.novedades | reverse | limit(3) %}
							<div class="col-md-4 col-lg-4 col-sm-12">
								<div class="cuadro_blog ">
									<a href="{{novedad.url}}"><img src="{{ novedad.data.image }}" alt="Evento" class="w-36"></a>
									<div class="px-4 py-4 text-left">
										<i class="fa-regular fa-calendar"></i><span class="text-sm">
										{{novedad.data.date | dateFormat('DD/MM/YYYY')}}
										</span><br>
										<br>
										<h5 class="font-bold text-lg">
										{{novedad.data.title }}
										</h5>
										
										<span class="text-sm">
										{{novedad.data.description}}
										</span>
										
									</div>
									<a href="{{novedad.url}}"><div class="px-4 pb-2 pt-2 text-left" style="border-top:#ccc 1px solid">
										<span>Ver más <i class="fa-solid fa-caret-right"></i></span>
									</div></a>

								</div>
							</div>
							{% endfor %}
							<div style="display:flex; justify-content:flex-end;padding-right:35px">
								<a href="/novedades/index.html">Más Contenido<i class="icon-arrow-right" style="margin-left:5px"></i></a>
							</div>
						</div>
					</div>
				</div>	
			</div>

		</section><!-- #content end -->
{% endblock %}

{% block body_javascripts %}
	
{% endblock %}